{
    "name": "vdf",
    "displayName": "Valve KeyValue Files Support",
    "description": "Support valve kv language(.vmt .qc .vdf .res .kv .fgd etc.)",
    "version": "0.0.4",
    "publisher": "GEEKiDoS",
    "icon": "SourceLogo.gif",
    "repository":"https://github.com/GEEKiDoS/vdf-vscode.git",
    "engines": {
        "vscode": "^1.23.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "vdf",
                "aliases": [
                    "Valve KeyValues File",
                    "vdf"
                ],
                "extensions": [
                    ".vmt",
                    ".qc",
                    ".vdf",
                    ".kv",
                    ".res",
                    ".vmf",
                    ".vmx",
                    ".txt"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "fgd",
                "aliases": [
                    "Forge Game Data",
                    "fgd"
                ],
                "extensions": [
                    ".fgd"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "vdf",
                "scopeName": "source.vdf",
                "path": "./syntaxes/vdf.tmLanguage.json"
            },
            {
                "language": "fgd",
                "scopeName": "source.fgd",
                "path": "./syntaxes/fgd.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "vdf",
                "path": "./snippets/vdf.snippets.json"
            }
        ]
    }
}